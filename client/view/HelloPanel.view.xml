<mvc:View
    controllerName="ch.soinwi.rltool.controller.HelloPanel"
    xmlns="sap.m"
    xmlns:mvc="sap.ui.core.mvc">
    <Panel
        headerText="Hello-Panel"
        class="sapUiResponsiveMargin"
        width="auto">
            <content>
                <Button
                    text="Show Dialog"
                    press="onOpenDialog"
                    class="sapUiSmallMarginEnd"
                    icon="sap-icon://world"
                    />
                <Button
                    text="Hello! World"
                    press="onShowHello"
                    class="sapUiSmallMarginEnd"/>
                <Input
                    value="{/recipient/name}"
                    valueLiveUpdate="true"
                    width = "60%"/>
                <Text
    			text="Hello {/recipient/name}"
    			class="sapUiSmallMargin"/>
            </content>
        </Panel>
</mvc:View>