<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core" >
   <Dialog
      title="Hello {/recipient/name}">
       <content>
           <core:Icon
                src="sap-icon://hello-world"
                size="8rem"
                class="sapUiMediumMargin"/>
       </content>
       <beginButton>
           <Button
                text="OK"
                press="onCloseDialog"/>
       </beginButton>
   </Dialog>
</core:FragmentDefinition>